services:
  nexus:
    image: sonatype/nexus3:latest
    container_name: nexus
    ports:
      - "8081:8081" # Web UI
      - "5000:5000" # Docker Registry (optional)
    volumes:
      - /data/nexus/nexus-data:/nexus-data
    environment:
      - NEXUS_SECURITY_RANDOMPASSWORD=false
      - NEXUS_CONTEXT=/ 
    restart: unless-stopped
    networks:
      - PrviNetwork

networks:
  PrviNetwork:
    external: true