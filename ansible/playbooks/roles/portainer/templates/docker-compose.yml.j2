services:
  portainer:
    image: portainer/portainer-ce:latest
    container_name: portainer
    ports:
      - "9000:9000"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /data/portainer/portainer_data:/data
    restart: unless-stopped
    networks:
      - PrviNetwork

networks:
  PrviNetwork:
    external: true